// Issue Creation Process
digraph Issue_Workflow {
	dpi=300 fontname=Arial nodesep=0.5 rankdir=TB ranksep=0.75 size="7.5,10" splines=ortho
	node [fontname=Arial fontsize=14 height=0.6 margin="0.2,0.1" shape=box style="rounded,filled"]
	edge [fontname=Arial fontsize=12 penwidth=1.5]
	identify [label="RA identifies task
that needs to be done" fillcolor="#e0eef3"]
	create_issue [label="Create GitHub Issue" fillcolor="#f0f4f8"]
	add_description [label="Add detailed description
of the required changes" fillcolor="#f0f4f8"]
	add_labels [label="Add specific labels
• Survey ID
• Activity type (missing data, etc.)" fillcolor="#f0f4f8"]
	assign_issue [label="Assign issue to contributor
(or self-assign)" fillcolor="#f0f4f8"]
	sync_fork [label="Sync fork with upstream
(git fetch upstream)" fillcolor="#e6e0f3"]
	branch [label="Create feature branch
named after issue number
(git checkout -b issue-123)" fillcolor="#e6e0f3"]
	identify -> create_issue
	create_issue -> add_description
	add_description -> add_labels
	add_labels -> assign_issue
	assign_issue -> sync_fork
	sync_fork -> branch
	fontsize=18 label="Phase 2: Issue Creation and Branch Setup" labelloc=t
}
